<Window x:Class="AuroraVoiceAtis.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:AuroraVoiceAtis.ViewModels" 
        xmlns:local="clr-namespace:AuroraVoiceAtis"
        xmlns:editors="clr-namespace:AuroraVoiceAtis.Views.Editors"
        d:DataContext="{d:DesignInstance Type=vm:MainWindowViewModel, IsDesignTimeCreatable=True}"
        mc:Ignorable="d"
        Title="{Binding Title}" Height="450" Width="800">
    <WrapPanel>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="150"/>
                <ColumnDefinition Width="150"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="50"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <!--<RowDefinition Height="Auto"/>-->
            </Grid.RowDefinitions>

            <StackPanel
                Grid.Column="0"
                Grid.Row="0"
                Grid.ColumnSpan="2">
                <Label>Metar</Label>
                <TextBox Text="{Binding Metar}"/>
            </StackPanel>
            <StackPanel
                Grid.Column="0"
                Grid.Row="1">
                <Label>Dep. suffixes</Label>
                <editors:StringCollectionEditorView DataContext="{Binding DeparturesSuffix}"/>
            </StackPanel>
            <StackPanel
                Grid.Column="1"
                Grid.Row="1">
                <Label>Arr. suffixes</Label>
                <editors:StringCollectionEditorView DataContext="{Binding ArrivalsSuffix}"/>
            </StackPanel>
            <StackPanel
                Grid.Column="0"
                Grid.Row="2">
                <Label>Departure RWY</Label>
                <editors:StringCollectionEditorView DataContext="{Binding DepartureRunways}"/>

            </StackPanel>
            <StackPanel
                Grid.Column="1"
                Grid.Row="2">
                <Label>Arrival RWY</Label>
                <editors:StringCollectionEditorView DataContext="{Binding ArrivalRunways}"/>
            </StackPanel>
        </Grid>
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
            <Button Command="{Binding GenerateAndPlayAudioCommand}">Générer fichier audio</Button>
        </StackPanel>
    </WrapPanel>
</Window>
